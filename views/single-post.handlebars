<div class="title">
  <p>{{post.title}}</p>
  <p>posted by {{post.user.username}} on {{format_date created_at}}</p>
</div>
<div class="article">
  <p>{{post.post_url}}</p>
</div>

{{#if loggedIn}}
  <form class="comment-form">
    <div>
      <textarea name="comment-body"></textarea>
    </div>

    <div>
      <button type="submit">add comment</button>
    </div>
  </form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
    <section class="comment">
      <div class="text">
        {{comment_text}}
      </div>
      <div class="meta">
        {{user.username}}
        on
        {{format_date createdAt}}
      </div>

    </section>
  {{/each}}
</div>

{{#if loggedIn}}
  <script src="/javascript/comment.js"></script>
{{/if}}